Subject: [PATCH] Re-set name and lore to make itemstacks more consistent
 internally


diff --git a/src/main/java/org/bukkit/inventory/ItemStack.java b/src/main/java/org/bukkit/inventory/ItemStack.java
index 77099e6152ce99897b41594f0a1d44460f7721e5..be5a6d632731f16d588db5dff082d892a416a6d3 100644
--- a/src/main/java/org/bukkit/inventory/ItemStack.java
+++ b/src/main/java/org/bukkit/inventory/ItemStack.java
@@ -700,6 +700,16 @@ public class ItemStack implements Cloneable, ConfigurationSerializable, Translat
         if (version <= 1343) {
             convertHorse(result);
         }
+        if (result.hasItemMeta()) {
+            ItemMeta itemMeta = result.getItemMeta();
+            if (itemMeta.hasDisplayName()) {
+                itemMeta.displayName(itemMeta.displayName());
+            }
+            if (itemMeta.hasLore()) {
+                itemMeta.lore(itemMeta.lore());
+            }
+            result.setItemMeta(itemMeta);
+        }
         return result;
         // EMC end
     }
