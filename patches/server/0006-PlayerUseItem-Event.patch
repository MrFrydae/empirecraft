+                    if (itemstack1.isDamageableItem() && itemstack1.getDamageValue() != j) {
+                        itemstack1.setDamageValue(j);
+                    }
+                }
+
+                org.bukkit.inventory.ItemStack craftNew = org.bukkit.craftbukkit.inventory.CraftItemStack.asCraftMirror(itemstack1);
